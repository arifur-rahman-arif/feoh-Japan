---
import '../styles/main.scss';
import Navbar from '@/components/Navbar/index.astro';
import Footer from '../components/Footer/index.astro';
import ButtonScrollTop from '../components/ButtonScrollTop/index.astro';
import CookieConsent from '@/components/CookieConsent/index.astro';

const { currentPageTitle, whiteNav, excludeSecondNav } = Astro.props;
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="generator" content={Astro.generator} />
        <link rel="preconnect" href="https://fonts.googleapis.com" />
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
        <link
            href="https://fonts.googleapis.com/css2?family=Noto+Sans+JP:wght@100..900&display=swap"
            rel="stylesheet"
        />
        <link href="https://fonts.googleapis.com/css?family=Muli:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i&amp;subset=latin-ext,vietnamese" rel="stylesheet" />
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css" />
        <link href="https://assets.juicer.io/embed.css" media="all" rel="stylesheet" type="text/css" />
        <script is:inline src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"></script>

        <title>FEH JP</title>
    </head>
    <body>
        <Navbar whiteNav={whiteNav} excludeSecondNav={excludeSecondNav} />
        <slot />
        <Footer currentPageTitle={currentPageTitle} />
        <ButtonScrollTop />
        <CookieConsent />
        <!-- Scripts goes here -->
        <script is:inline src="/scripts/navbar.js"></script>
        <script is:inline src="/scripts/masthead.js"></script>
        <script is:inline src="/scripts/swiperScripts.js"></script>
        <script is:inline type="module" src="/scripts/btnScrollTop.js"></script>
        <script is:inline type="module" src="/scripts/faq.js"></script>
        <script is:inline type="module" src="/scripts/loginPopup.js"></script>
        <script src="https://www.google.com/recaptcha/api.js" async defer></script>

        <!-- Selector -->
        <script src="https://unpkg.com/slim-select@latest/dist/slimselect.min.js"></script>
        <link href="https://unpkg.com/slim-select@latest/dist/slimselect.css" rel="stylesheet" />

        <!-- Flatpickr -->
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css" />
        <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
        <!-- Flatpickr Japanese Locale -->
        <script src="https://cdn.jsdelivr.net/npm/flatpickr/dist/l10n/ja.js"></script>

        <!-- Tooltip js -->
        <script is:inline src="https://unpkg.com/@popperjs/core@2"></script>
        <script is:inline src="https://unpkg.com/tippy.js@6"></script>
        <script is:inline src="/scripts/tooltip.js"></script>

        <!-- Modal -->
        <script is:inline src="/scripts/modal.js"></script>
        <script is:inline src="/scripts/hotelBooking.js"></script>

        <!-- Cookie consent -->
        <script is:inline src="/scripts/cookieConsent.js"></script>

        <!-- Juicer Script -->
        <script src="https://assets.juicer.io/embed.js" async></script>
    </body>
</html>
