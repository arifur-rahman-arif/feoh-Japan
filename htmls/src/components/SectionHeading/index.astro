---
const { title, subtitle } = Astro.props;
---

<div class="section-heading-container">
    <h2 class="section-title">{title}</h2>
    {subtitle && (
      <h3 class="section-subtitle">{subtitle}</h3>
    )}
    <div class="flex flex-col items-center">
      <div class="header-divider"></div>
    </div>
</div>