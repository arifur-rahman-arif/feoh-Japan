---
const { menuItems } = Astro.props;
---

<ul class="grid grid-cols-[auto_1fr] justify-items-start gap-x-20 gap-y-6 md:justify-self-end">
    {
        menuItems.map(item => (
            <li class="flex flex-col items-start">
                <a
                    href={item.link}
                    class="text-sm font-400 leading-normal text-color4 transition-all duration-500 hover:text-color1"
                >
                    {item.text}
                </a>
            </li>
        ))
    }
</ul>
