    }
];
---

<style is:inline>
    .faq--grey-theme {
        background-color: var(--color13);
    }

    .faq--grey-theme .faq-item__content {
        background-color: var(--color4) !important;
    }

    .faq-item .faq-item__content {
        max-height: 0;
        overflow: hidden;
    }

    .faq-item--active .faq-item__title h3 {
        color: var(--color1);
    }

    .faq-item--active .icon-plus {
        opacity: 0;
    }

    .faq-item--active .icon-minus {
        opacity: 1;
    }

    .faq-item--active .faq-item__content {
        max-height: 1000px;
    }
</style>

<section id="faq" class={`section ${className} faq`}>
    <div class="container grid">
        <SectionHeading title="よくあるご質問" />

        <div class="faq-container grid max-w-[55rem] justify-self-center">
            {
                faqList.map((faq, index) => (
                    <div class={`faq-item ${index === 0 ? 'faq-item--active' : ''}`}>
                        {/* Clickable Title */}
                        <div class="faq-item__title group/faq grid cursor-pointer grid-cols-[auto_1fr_auto] items-center gap-5 px-5 py-4 md:px-10">
                            <img src="/icons/icon-question.svg" width="40" height="40" alt="" class="h-10 w-10" />
                            <h3
                                class={`text-base font-400 leading-normal text-black transition-all duration-500 group-hover/faq:text-color1`}
                            >
                                {faq.title}
                            </h3>
                            <div class="relative">
                                <img
                                    src="/icons/icon_plus.svg"
                                    width="40"
                                    height="40"
                                    alt=""
                                    class="icon-plus h-10 w-10 transition-all duration-500"
                                />
                                <img
                                    src="/icons/icon_minus.svg"
                                    width="40"
                                    height="40"
                                    alt=""
                                    class={`icon-minus absolute left-0 top-0 h-10 w-10 opacity-0 transition-all duration-500`}
                                />
                            </div>
                        </div>

                        {/* Content */}
                        <div class="faq-item__content bg-color13 transition-all duration-700">
                            <div class="faq-item__description grid grid-cols-[auto_1fr] items-start gap-5 px-5 py-4 md:px-10">
                                <img src="/icons/icon-answer.svg" width="40" height="40" alt="" class="h-10 w-10" />
                                <p>{faq.description}</p>
                            </div>
                        </div>
                    </div>
                ))
            }
        </div>
    </div>
</section>
