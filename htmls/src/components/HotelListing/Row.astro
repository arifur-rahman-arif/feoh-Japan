---
import SwiperImage from "./SwiperImage.astro";
import SliderInfo from "./SliderInfo.astro";

const { hotel, layout, rowclass } = Astro.props;
---

<div
  class={`flex flex-col md:flex-row ${
    layout === "right" ? "md:flex-row-reverse" : ""
  } items-center hotel-listing-item ${rowclass}`}
>
  <!-- Swiper Image Component -->
  <div class="w-full md:w-[52%]">
    <div class="flex flex-col justify-center p-5 space-y-4">
      <div class="hotel-info-title-container block lg:hidden">
        <h2 class="hotel-title line-clamp-2">{hotel.title}</h2>
        <p class="hotel-en-title line-clamp-2">{hotel.enTitle}</p>
      </div>
    </div>
    <SwiperImage images={hotel.images} />
  </div>

  <!-- Slider Info Component -->
  <div class="w-full md:w-[48%] hotel-info-container">
    <SliderInfo {...hotel} />
  </div>
</div>
