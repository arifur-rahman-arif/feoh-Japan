---
import Layout from '../layouts/Layout.astro';
import MastheadRoom from '../components/Masthead/MastheadRoom.astro';
import SecondaryNav from '../components/SecondaryNav/index.astro';
import Access from '../components/Access/index.astro';
---

<style is:inline>
    #navbar {
        position: sticky !important;
        background-color: var(--color4) !important;
    }
</style>

<Layout currentPageTitle="アクセス" whiteNav={true}>
    <MastheadRoom heading="アクセス" subheading="ACCESS" image="/assets/images/banner_image_4.png" />
    <SecondaryNav bgColor="bg-white" navItems={[
        { id: "location-map", label: "所在地・地図" },
        { id: "train", label: "電車をご利用の場合" },
        { id: "airport", label: "空港からお越しの場合" },
        { id: "car", label: "お車でお越しの場合" },
    ]}
    />
    <Access
        className="access-section"
        bgColor="bg-white"
    />
</Layout>
