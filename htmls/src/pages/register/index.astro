---
import Layout from '../../layouts/Layout.astro';
import MastheadRoom from '@/components/Masthead/MastheadRoom.astro';
import RegistrationForm from '@/components/RegistrationForm/index.astro';
import SectionHeading from '@/components/SectionHeading/index.astro';

// Welcome to Astro! Wondering what to do next? Check out the Astro documentation at https://docs.astro.build
// Don't want to use any of this? Delete everything in this file, the `assets`, `components`, and `layouts` directories, and start fresh.
---

<style is:inline>
    #navbar {
        position: sticky !important;
        background-color: var(--color4) !important;
    }
</style>

<Layout currentPageTitle="お問い合わせ" whiteNav={true}>
    <MastheadRoom
        heading="ファーイースト・インサイダー会員登録"
        subheading="MEMBER REGISTRATION"
        image="/assets/masthead/masthead-registration.png"
    />

    <div class="mx-auto max-w-[71.62rem] bg-[#F0EBDC] p-3 md:p-4 lg:mt-10">
        <div
            class="grid items-center justify-items-center gap-2 border border-solid border-color1 p-3 md:grid-cols-2 lg:grid-cols-[auto_1fr] lg:gap-8 lg:p-8"
        >
            <h2 class="text-center text-xl font-700 text-color11 md:text-[2rem] md:leading-[150%]">
                ファーイースト・インサイダー<br /><span
                    class="text-xl font-700 text-color1 md:text-[2rem] md:leading-[150%]">会員限定</span
                >特典
            </h2>
            <!-- Banner -->
            <div class="flex flex-wrap items-center justify-center gap-4">
                <img src="/assets/section-images/registration-banner-point-1.png" width="170" height="170" alt="" />
                <img src="/assets/section-images/registration-banner-point-2.png" width="170" height="170" alt="" />
                <img src="/assets/section-images/registration-banner-point-3.png" width="170" height="170" alt="" />
            </div>
        </div>
    </div>

    <section class="section" id="contact-section">
        <div class="container grid justify-items-center">
            <SectionHeading title="アカウントを作成" />

            <p class="text-center text-color9">以下にお客様の情報をご入力下さい。</p>
            <RegistrationForm />
        </div>
    </section>

    <section class="section bg-color13" id="faq-section">
        <div class="container grid justify-items-center gap-5 py-6 md:gap-10 md:py-14">
            <h2 class="max-w-[44rem] text-center text-xl font-500 leading-10 text-black">
                該当する項目が見つからない場合は、恐れ入りますがフォーム、電話、 またはメールでお問い合わせください。
            </h2>

            <a class="button !bg-color4 !text-color1" href="">
                よくあるご質問
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 16 16" fill="none">
                    <path
                        d="M10.2967 7.99957L5.95171 3.65459C5.83712 3.54 5.78131 3.40358 5.78429 3.24534C5.78727 3.08711 5.84606 2.95064 5.96065 2.83595C6.07525 2.72136 6.21166 2.66406 6.3699 2.66406C6.52814 2.66406 6.6646 2.72136 6.77929 2.83595L11.1952 7.26082C11.2994 7.36513 11.3767 7.48198 11.427 7.61138C11.4773 7.74078 11.5025 7.87018 11.5025 7.99957C11.5025 8.12897 11.4773 8.25837 11.427 8.38777C11.3767 8.51717 11.2994 8.63402 11.1952 8.73833L6.77035 13.1632C6.65576 13.2778 6.52083 13.3336 6.36558 13.3306C6.21022 13.3276 6.07525 13.2688 5.96065 13.1543C5.84606 13.0397 5.78876 12.9032 5.78876 12.745C5.78876 12.5868 5.84606 12.4503 5.96065 12.3356L10.2967 7.99957Z"
                        fill="#9D7C36"></path>
                </svg>
            </a>
        </div>
    </section>

    <script src="https://www.google.com/recaptcha/api.js" async defer></script>
    <script src="https://unpkg.com/slim-select@latest/dist/slimselect.min.js"></script>
    <link href="https://unpkg.com/slim-select@latest/dist/slimselect.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css" />
    <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
    <!-- Flatpickr Japanese Locale -->
    <script src="https://cdn.jsdelivr.net/npm/flatpickr/dist/l10n/ja.js"></script>

    <script is:inline src="/scripts/registration.js"></script>
</Layout>
