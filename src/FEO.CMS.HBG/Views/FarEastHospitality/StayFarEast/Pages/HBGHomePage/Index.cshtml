@model PageViewModel<HBGHomePage>

@{
    // var config = GetConfig<HomeBannerConfig>();

    // var position = config != null && config.PositionBookingWidget != null && !string.IsNullOrEmpty(config.PositionBookingWidget.Value) ? config.PositionBookingWidget.Value : Constants.Middle;
    var position = string.Empty;
}

<!-- 1st section hotel banner -->
<div class="container-fluid home-banner static-content">
    <input type="hidden" class="noResults" name="noResults" value="" /> 
    @* value="@Dictionary.GetValue(DictionaryKeys.NoResultsMessage)" *@

    @Html.PropertyFor(x => x.CurrentPage.BannerContentArea)

    <div class="banner-content text-center">
        <div class="content-table-container">
            <div class="table-v-middle">
                <h1 class="text-jumbo">@Model.CurrentPage.WelcomeText)</h1>
                <p>@Model.CurrentPage.Summary)</p>
                <div class="SFE_banner_booking_widget hidden-xs hidden-sm @position"> @Html.PropertyFor(x => x.CurrentPage.BookingWidgetContentArea)</div>

                <div class="row hidden-desktop @position">
                    <div class="col-md-offset-3 col-md-6 search-wrapper">
                        @if (Model.CurrentPage.SearchResultsURL != null)
                        {
                            <form id="home-search" method="GET" action="" class="home-banner-search" data-action="@(Model.CurrentPage.SearchResultsURL.Href)">
                                <!-- search to button -->
                                <div class="input-group searchbar">
                                    <input readonly type="text" autocomplete="off" class="form-control input-lg" id="homebanner-search" placeholder="@Model.CurrentPage.SearchInputPlaceholder">
                                    <div id="search-params"></div>
                                    <span class="input-group-btn">
                                        <p class="btn btn-lg btn-search"><span class="glyphicon glyphicon-search"></span></p>
                                    </span>
                                </div>
                            </form>
                        }

                    </div>
                    <!-- home banner search -->
                    <div class="">
                        <div class="input-group ">
                            <label class="sr-only" for="homebanner-search">@Model.CurrentPage.SearchInputPlaceholder)</label>

                            <span class="input-group-btn">
                                <button type="button" class="btn btn-default btn-lg" id="homebannersearch" aria-label="home banner search"></button>
                            </span>
                        </div><!-- /input-group -->
                    </div>
                </div>

                @if (Model.CurrentPage.ShowAllLink != null)
                {
                    <div class="inspire-me text-uppercase text-left hidden-xs">
                        <a href="@Model.CurrentPage.ShowAllLink.Href" class="color-white">@Model.CurrentPage.ShowAllLink.Text<span class="glyphicon glyphicon-chevron-right color-pink"></span></a>
                    </div>
                }
            </div>
        </div>
        <div class="note color-white hidden-xs hidden-sm"><i>@Model.CurrentPage.Caption</i></div>
        @* @if (config != null && config.ShowDownwardArrow && position != Constants.Bottom)
        {
            <div class="banner-arrow hidden-xs">
                <a href="#hotel-recommend" class="color-white scrollto arrow">
                    <span>@Dictionary.GetValue(DictionaryKeys.MorePropertiesText)</span><br />
                    <span class="lnr lnr-chevron-down"></span>
                </a>
            </div>
        } *@
    </div>
</div>