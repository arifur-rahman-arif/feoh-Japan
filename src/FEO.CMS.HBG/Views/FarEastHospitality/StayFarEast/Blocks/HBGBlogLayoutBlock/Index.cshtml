@model HBGBlogLayoutBlock

@{
    var currentPage = ContentLoader.Get<HBGBlogDetailPage>(PageRouteHelper.PageLink);
    <div class="wrap-blog-detail">
        <div class="container">
            <div class="row-flex">
                <div class="col-sm-8 col-xs-12">
                    <div class="content__scroll">
                        @if (currentPage.Description != null)
                        {
                            <div class="block-content block-content-editor">
                                @Html.PropertyFor(x => currentPage.Description)
                            </div>
                        }
                        @Html.PropertyFor(x => currentPage.BlogContent)
                    </div>
                </div>
                <div class="col-sm-4 col-xs-12 blog-sidebar-menu">
                    <div class="btn-summary-overlay"></div>
                    <div class="sidebar__inner" data-header="nav.navbar.navbar-default" data-sync="content__scroll">
                        @Html.PropertyFor(x => currentPage.BlogSidebar)
                    </div>
                </div>
            </div>
            <div class="row-flex">
                <div class="col-sm-8 col-xs-12">
                    @Html.PropertyFor(x => currentPage.BlogNav)
                </div>
            </div>
            <div class="line-bottom"></div>
        </div>
    </div>
}